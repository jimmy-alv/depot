<div class="w-full">
  <%= render 'notice' %>

  <div class="mb-6 pb-2 border-b-2 flex justify-between	items-center">
    <h1 class="font-bold text-xl">Your Pragmatic Catalog</h1>
    <p>You had visited this page <%= pluralize(session[:counter], 'time')  %></p>
  </div>

  <%= turbo_stream_from 'products' %>

  <ul>
    <% cache @products do %>
      <% @products.each do |product|%>
        <% cache product do%>
          <%= render partial: 'product', object: product %>
        <% end %>
      <% end %>
    <% end  %>
  </ul>
</div>
