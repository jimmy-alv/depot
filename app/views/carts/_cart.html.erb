<div id="<%= dom_id cart %>" class="mb-3">
  <h2 class="font-bold text-lg mb-3">Your Cart</h2>
  <table class="table-auto">

    <thead>
      <tr class="font-bold text-center">
        <td>Quantity</td>
        <td>Item</td>
        <td>Price</td>
      </tr>
    </thead>

    <tbody>
      <%= render cart.line_items %>
    </tbody>

    <tfoot>
      <tr>
        <th class="text-right pr-2 pt-2" colspan="2">Total:
        </th>
        <td class="text-right pt-2 font-bold border-t-2 border-black">
          <%= number_to_currency(cart.total_price) %>
        </td>
      </tr>
    </tfoot>
  </table>
</div>
<%= button_to "Empty Cart",
cart,
method: :delete,
class: "mb-3 rounded-lg py-1 px-2 text-white bg-green-600" %>
